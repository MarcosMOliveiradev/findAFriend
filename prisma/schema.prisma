generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ORG
  MEMBER
}

model User {
  id         String   @id
  nome       String
  email      String   @unique
  cep        Int
  endereco   String
  numero     Int
  contato    Int
  password   String
  avata      String?
  role       Role     @default(MEMBER)
  created_at DateTime @default(now())

  pet Pet[]
}

model Pet {
  id            String   @id
  nome          String
  descricao     String
  idade         Int
  porte         String
  energia       String
  independencia String
  fotos         String[]
  requisitos    String?

  user   User   @relation(fields: [userId], references: [id])
  userId String

  created_at DateTime @default(now())
}
